<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeitPlan.Views.Admin.Add_Degree" Title="Add_Degree">
    <ContentPage.Content>
        <StackLayout Padding="24">
            <Picker Title="--Select Department"   x:Name="ddlDepartment"/>
            <Entry x:Name="txtDName" Placeholder="Degree Name"  Keyboard="Chat"/>
            <!--<Entry x:Name="txtDFID" Placeholder="Degree " Keyboard="Numeric"/>-->




            <ActivityIndicator x:Name="LoadingInd" IsRunning="False" />
            <Button Text="Add Degree" x:Name="btnDegree" Clicked="btnDegree_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>