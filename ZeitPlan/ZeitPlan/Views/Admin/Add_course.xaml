<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeitPlan.Views.Admin.Add_course"
             Title=" ADD Course">
    <ContentPage.Content>
        <StackLayout Padding="24">
            <Entry x:Name="txtCOName" Placeholder="Course Name"  ReturnType="Next" Keyboard="Chat"/>
            <Entry x:Name="txtCOCredit" Placeholder="Credit Hours"  ReturnType="Next" Keyboard="Numeric"/>
            
           
            
            <ActivityIndicator x:Name="LoadingInd" IsRunning="False" />
            <Button Text="Add Course" x:Name="btnCourse" Clicked="btnCourse_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>