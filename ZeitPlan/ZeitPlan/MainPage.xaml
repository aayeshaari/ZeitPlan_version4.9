                <Button Text="Student" BorderWidth="4"  CornerRadius="30" BackgroundColor="#bd6513" TextColor="white"  x:Name="btnStudent" Clicked="btnStudent_Clicked"/>


               
        
                <Label  TextColor="#bd6513" Text="Reset Defualt" HorizontalTextAlignment="Center" Margin="0,0,0,30" FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Reset_Default" Tapped="Reset_Default_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>

     
        </StackLayout >
 
